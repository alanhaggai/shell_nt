#!/usr/bin/perl 

use warnings;
use strict;

# basic shell

# For now I do this ugly 
# thing 

my $olddir;

BEGIN {
	require File::Basename;
	require Cwd;
	Cwd->import( qw/getcwd/ );
	File::Basename->import( qw/fileparse/ );
	$olddir = getcwd();
	my ($file, $dir) = fileparse($0);
	chdir $dir;
}

use Shell_NT;
use Shell_NT::History;

chdir $olddir;

# create new context
#

# main plugins
#
# some parameters:
# know: base directory with config and data

my $shell = Shell_NT->new();

# this shell is only interative!
# so opens the input command line
#

$shell->console();

